<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tv="http://schemas.android.com/apk/res/reco.frame.demo"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TvRelativeLayoutActivity" >

    <!-- 无字 *图片宽高像数须为偶数 -->
 	<reco.frame.tv.view.TvLoadingBar
 	    android:id="@+id/tlb_a"
        android:layout_width="@dimen/px230"
        android:layout_height="@dimen/px230"
        tv:imageRes="@drawable/circle_a"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px100"
        />
 	
 	<!-- 有字 *图片宽高像数须为偶数 -->
 	<reco.frame.tv.view.TvLoadingBar
 	    android:id="@+id/tlb_b"
        android:layout_width="@dimen/px230"
        android:layout_height="@dimen/px230"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px100"
        android:layout_toRightOf="@+id/tlb_a"
        tv:imageRes="@drawable/circle_a"
        tv:textSize="@dimen/px24"
       	tv:textColor="@android:color/holo_blue_light"
       tv:textDisplayable="true"
        />

</RelativeLayout>
